<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <TextView
        android:id="@+id/Only_text_on_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/Only_text_on_login"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Email_on_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/Email_on_login"
        android:inputType="textEmailAddress"
        android:textColor="@color/primary_dark" />

    <EditText
        android:id="@+id/Password_on_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/Password_on_login"
        android:inputType="numberPassword"
        android:textColor="@color/primary_dark" />

    <Button
        android:id="@+id/Login_on_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="@string/Login_on_login"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/reset_pass"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_on_login"
        android:layout_marginStart="-21dp"
        android:layout_toEndOf="@+id/Only_text_on_login"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/reset_pass"
        android:textSize="16dp" />
</RelativeLayout>