<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:maxWidth="@android:dimen/thumbnail_width"
    android:minWidth="@android:dimen/thumbnail_height"
    tools:context=".Start">

    <TextView
        android:id="@+id/Already_have_account_on_start"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/primary_light"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Already_have_account_on_start"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Wellcom_on_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Wellcom_on_start"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>